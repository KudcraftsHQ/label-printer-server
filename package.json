{
  "name": "label-printer-server",
  "version": "1.1.2",
  "description": "Electron-based label printer application with TSPL support for thermal printers",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac"
  },
  "keywords": [
    "electron",
    "label-printer",
    "tspl",
    "thermal-printer",
    "qr-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "qrcode": "^1.5.3",
    "usb": "^2.11.0",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "electron-auto-launch": "^5.0.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.kudcrafts.labelprinter",
    "productName": "Label Printer Server",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "KudcraftsHQ",
      "repo": "label-printer-server"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  }
}
